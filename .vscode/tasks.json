{

    "version": "2.0.0",

    "tasks": [

        {
    "label": "compile",
    "type": "shell",
    "command": "g++",
    "args": [
        "-std=c++17",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "${file}"
    ],
    "group": {
        "kind": "build",
        "isDefault": false
    }
},
{
    "label": "compile and run",
    "type": "shell",
    "command": "g++ -std=c++17 -o ${fileDirname}/${fileBasenameNoExtension} ${file} && ${fileDirname}/${fileBasenameNoExtension} < ${fileDirname}/input.txt > ${fileDirname}/output.txt",
    "group": {
        "kind": "build",
        "isDefault": true
    }
}, 

        {
            "label": "Git Pull",
            "type": "shell",
            "command": "git pull",
            "problemMatcher": []
        },
        {
            "label": "Git Auto Commit & Push",
            "type": "shell",
            "command": "git add . && git commit -m \"Auto commit\" && git push",
            "problemMatcher": []
        }

    ]

}

